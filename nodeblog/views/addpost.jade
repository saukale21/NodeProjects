extends layout 

block content 
    h1=title 
    form(method='post', action='/posts/add',enctype='multipart/form-data')
        .form-group
            label Title: 
            input.form-control(name='title',type='text')
        .form-group
            label Category
            select.form-control(name='category')
                each category, i in categories  
                    option(value='#{category.name}') #{category.name}
        .form-group
            label Body
            textarea.form-control(name='body',id='id')
        .form-group
            label Main Image: 
            input.form-control(name='mainimage',type='file')
        .form-group
            label Author: 
            select.form-control(name='author')
                option(value="Saurabh Kale") Saurabh Kale
                option(value="Shubham Kale") Shubham Kale
        input.btn.btn-default(name='submit', type='submit', value='Save')
        //-script(src="/ckeditor/ckeditor.js") 
        script(src="//cdn.ckeditor.com/4.9.2/standard/ckeditor.js") 
        script
            | CKEDITOR.replace('body');